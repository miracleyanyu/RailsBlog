<div class="col-md-4 card-item" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
    <div class="card-body">
      <p class="card-text">
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
        <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center published">
        <% if logged_in?(:site_admin) %>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></button>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Destroy", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        <% end %>
        <small class="text-muted">Published <%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago</small>
      </div>
    </div>
  </div>
</div>